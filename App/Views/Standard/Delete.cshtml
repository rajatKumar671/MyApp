@model Student.Domain.Standard

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
<div style="border-radius:8px;background-color:#f2f2f2;padding:20px">
    <h4>Standard</h4>
    <dl>
        <dt>
            <label asp-for="StandardName">Course Name:</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StandardName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> 
    </form>
</div>
<a asp-action="Standard">Back to List</a>

