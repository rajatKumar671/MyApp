@model IEnumerable<Student.Domain.Students>
@{
    ViewData["Title"] = "Student Detail Page";
}

<h1>Details</h1>
<p><a> @Html.ActionLink("Create New", "Create") </a></p>
 var 
<table class="table" style="width:70%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompeletionDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var Difference = (item.CompeletionDate-item.AddmissionDate);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td data-toggle="tooltip" title="CourseDuration- @Difference" data-placement="bottom">
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @item.Standard.StandardName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompeletionDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


