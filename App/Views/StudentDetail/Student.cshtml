@model IEnumerable<Student.Domain.Students>
@{
    ViewData["Title"] = "Student Detail Page";
}
<h1>Details</h1>
<p><a> @Html.ActionLink("Create New", "Create") </a></p>

<table class="table" style="width:70%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>@Html.DisplayNameFor(model => model.Standard)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNo)
                </td>
                <td>
                   <button type="button" data-toggle="modal" data-target="#myModal">@Html.DisplayFor(modelItem => item.Name)</button>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @item.Standard.StandardName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
        <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Admission Details</h4>
                </div>
                <div class="modal-body">
                    <table class="table" style="width:70%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddmissionDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseDuration)
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddmissionDate)
                                    </td>
                                    <td>
                                       @Html.DisplayFor(modelItem => item.CourseDuration)
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"> Close</button>
                </div>
            </div>
        </div>

    </div>
</div>